{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="main container">

        <div class="col-md-12">
            <div class="page-header">
                <h2>Alterarção de Carro </h2>
            </div>
            {{ form_start(form) }}


            <div class="col-md-6">

                <div class="form-group">
                    {{ form_label(form.image, 'Imagem') }}
                    {{ form_widget(form.image, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Insira uma imagem do carro'} }) }}
                    <span class="text-danger">{{ form_errors(form.image) }}</span>
                </div>

            </div>
            <div class="col-md-6">
                <div class="form-group text-right">

                    <a class="btn btn-default" href="{{ path('hm_carro') }}">Cancelar</a>

                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        {% endblock %}